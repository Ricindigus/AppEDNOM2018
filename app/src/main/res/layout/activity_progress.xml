<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ProgressActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorPrimary"
        android:gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_inei_blanco"/>
        <TextView
            android:id="@+id/progress_mensaje_carga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PREPARANDO CARGA DE MARCO..."
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/texto_medio"
            android:textColor="@color/colorIcons"/>
        <ProgressBar
            android:id="@+id/progress_progreso"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:theme="@style/themeprogress"
            android:visibility="visible"
            style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
            android:progressTint="@color/bluePrimary"
            android:progressBackgroundTint="@color/colorIcons"
            />
    </LinearLayout>
</LinearLayout>