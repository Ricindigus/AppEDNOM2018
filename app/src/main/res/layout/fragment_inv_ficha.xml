<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin8dp"
    android:orientation="vertical"
    tools:context=".fragments.registro_control_inventario.InvFichaFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:theme="@style/estilo_titulo_fragment"
        android:text="REGISTRO DE INVENTARIO - FICHA"/>
    <TextView
        android:id="@+id/inventario_ficha_txtRegistrados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/estilo_total_registrados"
        android:text="Registrados:30/100"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="8dp"
        android:background="@drawable/borde_spinner">
        <Spinner
            android:id="@+id/inventario_ficha_spAula"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:drawSelectorOnTop="true"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="8dp"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center"
        android:background="@drawable/borde_azul_buscador"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/inventario_ficha_edtCodigo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:inputType="number"
            android:maxLength="8"
            android:hint="Pasar lector de codigo de barras"
            android:gravity="center"
            android:background="@drawable/borde_edit_text"
            />
        <ImageView
            android:id="@+id/inventario_ficha_btnBuscar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_search"
            android:tint="@android:color/white"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/inventario_ficha_lytCorrecto"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin16dp"
            android:visibility="gone"
            android:background="@drawable/fondo_verde">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SE GRABO LA FICHA CORRECTAMENTE"
                android:layout_marginBottom="@dimen/margin8dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="@dimen/texto_grande"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/fondo_blanco"
                android:padding="@dimen/margin16dp"
                android:orientation="vertical">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin8dp"
                    android:background="@drawable/fondo_blanco">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/bluePrimaryDark"
                        android:textSize="@dimen/texto_mediano"
                        android:text="NRO FICHA: "/>
                    <TextView
                        android:id="@+id/ficha_correcta_txtFicha"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/greenPrimaryDark"
                        android:textSize="@dimen/texto_mediano"
                        android:text="345678"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin8dp"
                    android:background="@drawable/fondo_blanco">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/bluePrimaryDark"
                        android:textSize="@dimen/texto_mediano"
                        android:text="DNI: "/>
                    <TextView
                        android:id="@+id/ficha_correcta_txtDni"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/texto_mediano"
                        android:textColor="@color/greenPrimaryDark"
                        android:textStyle="bold"
                        android:text="43372489"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/ficha_correcta_txtNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/greenPrimaryDark"
                    android:textSize="@dimen/texto_grande"
                    android:layout_marginTop="@dimen/margin8dp"
                    android:text="DENIS RICARDO MORALES RETAMOZO"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/inventario_ficha_lytErrorAula"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin16dp"
            android:visibility="gone"
            android:background="@drawable/fondo_rojo">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ERROR. LA FICHA NO PERTENECE AL AULA"
                android:textColor="@color/redPrimaryDark"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="@dimen/texto_grande"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/fondo_blanco"
                android:padding="@dimen/margin16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin8dp"
                        android:background="@drawable/fondo_blanco">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="@dimen/texto_mediano"
                            android:textColor="@color/bluePrimaryDark"
                            android:text="DNI: "/>
                        <TextView
                            android:id="@+id/error_ficha_txtDni"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="@color/redPrimaryDark"
                            android:textSize="@dimen/texto_mediano"
                            android:text="43372489"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin8dp"
                        android:background="@drawable/fondo_blanco">
                        <TextView
                            android:id="@+id/error_ficha_txtNombre"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/texto_grande"
                            android:textStyle="bold"
                            android:textColor="@color/redPrimaryDark"
                            android:text="DENIS RICARDO MORALES RETAMOZO"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin8dp"
                    android:gravity="center"
                    android:layout_margin="@dimen/margin8dp"
                    android:layout_marginBottom="@dimen/margin8dp"
                    android:background="@drawable/marco_azul">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="@dimen/texto_mediano"
                        android:text="AULA"/>
                    <TextView
                        android:id="@+id/error_ficha_txtAula"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="30sp"
                        android:text="13"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/inventario_ficha_lytYaRegistrado"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin16dp"
            android:visibility="gone"
            android:background="@drawable/fondo_rojo">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ERROR. FICHA YA REGISTRADA"
                android:textColor="@color/redPrimaryDark"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="@dimen/texto_grande"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/fondo_blanco"
                android:padding="@dimen/margin16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin8dp"
                        android:background="@drawable/fondo_blanco">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="@color/bluePrimaryDark"
                            android:textSize="@dimen/texto_mediano"
                            android:text="NRO FICHA: "/>
                        <TextView
                            android:id="@+id/error_ficha_yaregistrada_txtFicha"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="@color/redPrimaryDark"
                            android:textSize="@dimen/texto_mediano"
                            android:text="345678"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin8dp"
                        android:background="@drawable/fondo_blanco">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/texto_mediano"
                            android:textStyle="bold"
                            android:textColor="@color/bluePrimaryDark"
                            android:text="DNI: "/>
                        <TextView
                            android:id="@+id/error_ficha_yaregistrada_txtDni"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/texto_mediano"
                            android:textStyle="bold"
                            android:textColor="@color/redPrimaryDark"
                            android:text="43372489"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin8dp"
                        android:background="@drawable/fondo_blanco">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/error_ficha_yaregistrada_txtNombre"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="@color/redPrimaryDark"
                            android:textSize="@dimen/texto_grande"
                            android:text="DENIS RICARDO MORALES RETAMOZO"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin16dp"
                    android:gravity="center"
                    android:layout_margin="@dimen/margin8dp"
                    android:background="@drawable/marco_azul">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="@dimen/texto_mediano"
                        android:text="AULA"/>
                    <TextView
                        android:id="@+id/error_ficha_yaregistrada_txtAula"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="30sp"
                        android:text="13"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/inventario_ficha_lytErrorFicha"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin16dp"
            android:visibility="gone"
            android:background="@drawable/fondo_rojo">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ERROR. CÓDIGO DE FICHA NO ENCONTRADA EN EL PADRÓN"
                android:textColor="@color/redPrimaryDark"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="@dimen/texto_grande"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin8dp"
                android:layout_marginBottom="@dimen/margin8dp"
                android:background="@drawable/fondo_blanco">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/bluePrimaryDark"
                    android:textSize="@dimen/texto_grande"
                    android:text="CÓDIGO FICHA: "/>
                <TextView
                    android:id="@+id/error_codigo_ficha_txtFicha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="@dimen/texto_grande"
                    android:textColor="@color/redPrimaryDark"
                    android:text="234656"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>