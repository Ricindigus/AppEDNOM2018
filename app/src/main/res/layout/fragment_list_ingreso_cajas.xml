<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/margin16dp"
    tools:context=".fragments.reportes.listados_de_registros.ListIngresoCajasFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CAJAS CONSULTADAS POR CÓDIGO DE BARRA (ENTRADA)"
            android:layout_marginTop="@dimen/margin8dp"
            android:textSize="@dimen/texto_grande"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"/>
        <TextView
            android:id="@+id/listado_txtNumero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total registrados:"
            android:gravity="center"
            android:textSize="@dimen/texto_mediano"
            android:layout_marginBottom="@dimen/margin8dp"
            android:textColor="@color/colorAccent"/>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/accent">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:background="@android:color/transparent">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:textColor="@color/icons"
                    android:gravity="center"
                    android:textSize="@dimen/texto_medio"
                    android:layout_height="wrap_content"
                    android:text="CÓDIGO DE BARRA"
                    />
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:textColor="@color/icons"
                    android:textSize="@dimen/texto_medio"
                    android:layout_height="wrap_content"
                    android:text="ACL"
                    />
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:textSize="@dimen/texto_medio"
                    android:textColor="@color/icons"
                    android:layout_height="wrap_content"
                    android:text="FECHA Y HORA"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/listado_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/listado_btnUpload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="10dp"
                android:src="@drawable/ic_file_upload"
                android:tint="@color/colorIcons"
                />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>