<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/margin16dp"
    tools:context=".fragments.reportes.listados_de_registros.ListInvCuadernilloFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LISTA DE CUADERNILLOS REGISTRADOS"
            android:layout_marginTop="@dimen/margin8dp"
            android:textSize="20sp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"/>
        <TextView
            android:id="@+id/lista_txtNumero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total registros:"
            android:gravity="center"
            android:layout_marginBottom="@dimen/margin8dp"
            android:textColor="@color/colorAccent"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="8dp"
            android:background="@drawable/borde_spinner">
            <Spinner
                android:id="@+id/lista_spAula"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:drawSelectorOnTop="true"
                />
        </LinearLayout>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin8dp"
            android:layout_marginRight="@dimen/margin8dp"
            android:background="@color/colorPrimary">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:background="@color/colorAccent">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:textColor="@color/icons"
                    android:layout_height="wrap_content"
                    android:text="DNI"
                    />
                <TextView
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:textColor="@color/icons"
                    android:layout_height="wrap_content"
                    android:text="COD. CUADERNILLO"
                    />
                <TextView
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:textColor="@color/icons"
                    android:layout_height="wrap_content"
                    android:text="NOMBRES Y APELLIDOS"
                    />
                <TextView
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:textColor="@color/icons"
                    android:layout_height="wrap_content"
                    android:text="FECHA Y HORA"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin8dp"
            android:layout_marginRight="@dimen/margin8dp">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/lista_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/lista_btnUpload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="10dp"
                android:src="@drawable/ic_file_upload"
                android:tint="@color/colorIcons"
                />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>