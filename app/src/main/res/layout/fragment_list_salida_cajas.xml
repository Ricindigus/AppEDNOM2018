<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="@dimen/margin16dp"
    tools:context=".fragments.reportes.listados_de_registros.ListSalidaCajasFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CAJAS CONSULTADAS POR CÓDIGO DE BARRA (SALIDA)"
            android:layout_marginBottom="@dimen/margin8dp"
            android:textSize="@dimen/texto_grande"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/listado_txtNumero"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Totales:"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="@dimen/texto_medio"
                android:textColor="@color/greyBluePrimaryDark"/>
            <TextView
                android:id="@+id/listado_txtNoRegistrados"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="No registrados:"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="@dimen/texto_medio"
                android:textColor="@color/redPrimaryDark"/>
            <TextView
                android:id="@+id/listado_txtIncompletos"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Incompletos:"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="@dimen/texto_medio"
                android:textColor="@color/bluePrimaryDark"/>
            <TextView
                android:id="@+id/listado_txtCompletos"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Completos:"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="@dimen/texto_medio"
                android:textColor="@color/amberPrimaryDark"/>
            <TextView
                android:id="@+id/listado_txtTransferidos"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Transferidos:"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="@dimen/texto_medio"
                android:textColor="@color/greenPrimaryDark"/>
        </LinearLayout>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/accent">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:background="@android:color/transparent">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:textColor="@color/icons"
                    android:gravity="center"
                    android:textSize="@dimen/texto_medio"
                    android:layout_height="wrap_content"
                    android:text="CÓDIGO DE BARRA"
                    />
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:textSize="@dimen/texto_medio"
                    android:textColor="@color/icons"
                    android:layout_height="wrap_content"
                    android:text="ACL"
                    />
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:textSize="@dimen/texto_medio"
                    android:textColor="@color/icons"
                    android:layout_height="wrap_content"
                    android:text="FECHA Y HORA"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/listado_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/listado_btnBuscar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="10dp"
                android:src="@drawable/ic_event_available"
                android:tint="@color/colorIcons"
                />
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/listado_btnUpload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="10dp"
                android:src="@drawable/ic_file_upload"
                android:tint="@color/colorIcons"
                />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>