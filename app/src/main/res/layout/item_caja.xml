<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_caja_cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <TextView
            android:id="@+id/item_caja_txtCodBarra"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="100100110310"
            android:textSize="@dimen/texto_medio"
            android:gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/item_caja_txtAcl"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:textSize="@dimen/texto_medio"
            android:textColor="@color/colorPrimaryDark"
            android:text="ACL: 1"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/item_caja_txtFecha"
            android:text="2018-05-02 13:30"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textColor="#b71c1c"
            android:gravity="center"
            android:textSize="@dimen/texto_medio"
            android:layout_height="wrap_content" />

    </LinearLayout>
</android.support.v7.widget.CardView>