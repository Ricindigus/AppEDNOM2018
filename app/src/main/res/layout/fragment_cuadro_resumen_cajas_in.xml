<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/margin16dp"
    android:orientation="vertical"
    tools:context=".fragments.reportes.cuadro_resumen.CuadroResumenCajasInFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RESUMEN DEL CONTROL DE CAJAS (ENTRADA)"
            android:layout_marginTop="@dimen/margin8dp"
            android:textStyle="bold"
            android:textSize="@dimen/texto_grande"
            android:gravity="center"
            android:layout_marginBottom="@dimen/margin8dp"
            android:textColor="@color/colorAccent"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/colorPrimary">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:background="@android:color/transparent">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:textColor="@color/icons"
                    android:gravity="center"
                    android:textSize="@dimen/texto_mediano"
                    android:layout_height="wrap_content"
                    android:text="DESCRIPCION"
                    />
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:textSize="@dimen/texto_mediano"
                    android:textColor="@color/icons"
                    android:layout_height="wrap_content"
                    android:text="TOTAL CAJAS LEIDAS"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="1dp"
            android:layout_marginLeft="1dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="@android:color/transparent">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:textColor="@color/accent"
                    android:gravity="center"
                    android:textSize="@dimen/texto_mediano"
                    android:layout_height="40dp"
                    android:background="@drawable/marco_celda"
                    android:text="APLICACIÃ“N"
                    />
                <TextView
                    android:id="@+id/resumen_cajas_txtAplicacion"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="40dp"
                    android:text="0"
                    android:textSize="@dimen/texto_mediano"
                    android:background="@drawable/marco_celda"
                    />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="@android:color/transparent">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:textColor="@color/accent"
                    android:gravity="center"
                    android:layout_height="40dp"
                    android:textSize="@dimen/texto_mediano"
                    android:background="@drawable/marco_celda"
                    android:text="ADICIONAL"
                    />
                <TextView
                    android:id="@+id/resumen_cajas_txtAdicional"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="40dp"
                    android:text="0"
                    android:textSize="@dimen/texto_mediano"
                    android:background="@drawable/marco_celda"
                    />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="@android:color/transparent">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:textColor="@color/accent"
                    android:gravity="center"
                    android:layout_height="40dp"
                    android:textSize="@dimen/texto_mediano"
                    android:background="@drawable/marco_celda"
                    android:text="CANDADO"
                    />
                <TextView
                    android:id="@+id/resumen_cajas_txtCandado"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:text="0"
                    android:layout_height="40dp"
                    android:textSize="@dimen/texto_mediano"
                    android:background="@drawable/marco_celda"
                    />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="@android:color/transparent">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:textColor="@color/accent"
                    android:gravity="center"
                    android:textSize="@dimen/texto_mediano"
                    android:layout_height="40dp"
                    android:background="@drawable/marco_celda"
                    android:text="TOTAL"
                    />
                <TextView
                    android:id="@+id/resumen_cajas_txtTotal"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="40dp"
                    android:text="0"
                    android:textSize="@dimen/texto_mediano"
                    android:background="@drawable/marco_celda"
                    />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>